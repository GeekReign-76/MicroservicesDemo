@startuml
class ValidationController {
    + Validate(request:SubmitRequest) : IActionResult
}
class SubmitRequest {
    + Name : string <<get>> <<set>> = ""
    + Value : int <<get>> <<set>>
    + Metadata : object? <<get>> <<set>>
}
class ValidationResult {
    + IsValid : bool <<get>> <<set>>
}
ControllerBase <|-- ValidationController
@enduml
