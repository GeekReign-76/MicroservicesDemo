@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

Person(user, "End User")

System_Boundary(msd, "MicroservicesDemo Platform") {

    Container(frontend, "Frontend SPA", "React + TypeScript + Nginx",
        "Provides user interface and communicates with BFF")

    Container(bff, "BFF API", "ASP.NET Core",
        "Aggregates backend services and shields frontend from complexity")

    Container(processing, "Processing Service", "ASP.NET Core",
        "Handles core domain processing logic")

    Container(validation, "Validation Service", "ASP.NET Core",
        "Performs validation logic as a separate concern")

    Container(k8s, "Kubernetes Cluster", "Kubernetes",
        "Orchestrates containers and manages service discovery")
}

Rel(user, frontend, "Uses", "HTTPS")
Rel(frontend, bff, "Calls", "REST/HTTP")
Rel(bff, processing, "Delegates processing to", "REST/HTTP")
Rel(bff, validation, "Delegates validation to", "REST/HTTP")

Rel(frontend, k8s, "Deployed to")
Rel(bff, k8s, "Deployed to")
Rel(processing, k8s, "Deployed to")
Rel(validation, k8s, "Deployed to")

@enduml